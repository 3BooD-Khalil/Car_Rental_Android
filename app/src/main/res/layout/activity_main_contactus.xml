<RelativeLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/logo_2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/txt_contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/contact_us"
        android:textColor="@color/blue"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_below="@id/logo_2"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"
        />

    <TextView
        android:id="@+id/Abdullah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/abdullah"
        android:textSize="30sp"
        android:textColor="@color/purple"
        android:layout_below="@id/txt_contact_us"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:id="@+id/email_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:layout_below="@id/Abdullah"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:id="@+id/email_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_val1"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:layout_alignBaseline="@id/email_contact"
        android:layout_toEndOf="@id/email_contact"
        android:textStyle="italic|bold"
        />
    <TextView
        android:id="@+id/phone_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:layout_below="@id/email_contact"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        />
    <TextView
        android:id="@+id/phone_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_val1"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:layout_alignBaseline="@id/phone_contact"
        android:layout_toEndOf="@id/phone_contact"
        android:textStyle="italic|bold"
        />
    <TextView
        android:id="@+id/Hamouda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hamouda"
        android:textSize="30sp"
        android:textColor="@color/purple"
        android:layout_below="@id/phone_contact"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/email_contact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:layout_below="@id/Hamouda"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:id="@+id/email_val2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_val2"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:layout_alignBaseline="@id/email_contact2"
        android:layout_toEndOf="@id/email_contact2"
        android:textStyle="italic|bold"
        />
    <TextView
        android:id="@+id/phone_contact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:layout_below="@id/email_contact2"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        />
    <TextView
        android:id="@+id/phone_val2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_val2"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:layout_alignBaseline="@id/phone_contact2"
        android:layout_toEndOf="@id/phone_contact2"
        android:textStyle="italic|bold"
        />
</RelativeLayout>